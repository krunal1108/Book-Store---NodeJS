<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <title>All Transactions</title>
</head>
<body>
  <div class="container mt-5">
    <h1>All Transactions</h1>
    <a href="/newadd" class="btn btn-primary mb-3">Add Transactionâž•</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Type</th>
          <th>Category</th>
          <th>Amount</th>
          <th>Description</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% transaction.forEach(transactions => { %>
          <tr>
            <td><%= transaction.type %></td>
            <td><%= transaction.category %></td>
            <td><%= transaction.amount %></td>
            <td><%= transaction.description %></td>
            <td><%= transaction.date ? transaction.date.toDateString() : 'No Date Provided' %></td>
            <td>
              <a href="/transaction/<%= transactions._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
              <form action="/transaction/<%= transactions._id %>/delete" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>

            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
